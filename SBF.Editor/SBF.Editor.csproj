<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net7.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\SBF.Core\SBF.Core.csproj" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.8.0" />
      <PackageReference Include="NativeFileDialog.Extended" Version="1.1.2" />
      <PackageReference Include="Raylib_ImGui" Version="1.0.2" />
    </ItemGroup>

    <ItemGroup>
        <EmbeddedResource Include="Assets/*" LogicalName="%(Filename)%(Extension)"/>
    </ItemGroup>
</Project>
